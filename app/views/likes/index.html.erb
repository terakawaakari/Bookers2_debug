<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4>お気に入り一覧</h4>
      <% @likes.each do |like| %>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag like.book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><br>
                <%= like.book.user.name %>
              </td>
              <td><%= like.book.title %></td>
              <td><%= like.book.body %></td>
              <td><%= link_to 'お気に入り解除', book_likes_path(like.book.id), method: :delete, class: 'btn btn-outline-warning btn-sm' %></td>
            </tr>
          </tbody>
          </thead>
        </table>
      <% end %>
    </div>
  </div>
</div>